{
  "name": "info-remover",
  "version": "1.0.0",
  "description": "Cross-platform metadata remover (images/Office/PDF/zip)",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "npm run build:main && concurrently -k \"npm:watch:main\" \"npm:dev:renderer\" \"npm:start:electron\"",
    "watch:main": "tsc -p tsconfig.main.json --watch",
    "start:electron": "cross-env VITE_DEV_SERVER_URL=http://localhost:5174 electron dist/main/main.js",
    "dev:main": "npm run start:electron",
    "dev:renderer": "vite dev --config vite.config.mts --port 5174",
    "build": "npm run build:renderer && npm run build:main",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build --config vite.config.mts",
    "start": "electron .",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win --x64",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:all": "npm run build && electron-builder --win --mac --x64 --arm64"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.example.info-remover",
    "productName": "Info Remover",
    "asar": true,
    "asarUnpack": [
      "**/node_modules/ffmpeg-static/**/*",
      "**/node_modules/ffprobe-static/**/*",
      "**/node_modules/sharp/**/*",
      "**/node_modules/@img/sharp*/**/*"
    ],
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Info Remover"
    },
    "publish": "never",
    "directories": {
      "output": "release",
      "buildResources": "build"
    }
  },
  "dependencies": {
    "exif-reader": "^2.0.3",
    "ffmpeg-static": "^5.3.0",
    "ffprobe-static": "^3.1.0",
    "file-type": "^21.3.0",
    "fluent-ffmpeg": "^2.1.3",
    "fs-extra": "^11.3.3",
    "jszip": "^3.10.1",
    "mime-types": "^3.0.2",
    "node-addon-api": "^8.5.0",
    "pdf-lib": "^1.17.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "sharp": "^0.34.5"
  },
  "optionalDependencies": {
    "@img/sharp-win32-x64": "^0.34.5",
    "@img/sharp-libvips-win32-x64": "^1.0.4",
    "@img/sharp-darwin-x64": "^0.34.5",
    "@img/sharp-libvips-darwin-x64": "^1.0.4",
    "@img/sharp-darwin-arm64": "^0.34.5",
    "@img/sharp-libvips-darwin-arm64": "^1.0.4"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "@types/ffprobe-static": "^2.0.3",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron-builder": "^26.4.0",
    "node-gyp": "^12.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^5.4.11"
  }
}